<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

	<RelativeLayout
		android:id="@+id/title"
		android:layout_width="match_parent"
		android:layout_height="@dimen/height_top_bar"
		android:layout_alignParentTop="true"
		android:background="@color/common_top_bar_blue" >
		<ImageView
			android:id="@+id/iv_back"
			android:layout_width="40dp"
			android:layout_height="match_parent"
			android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
			android:onClick="back"
			android:paddingBottom="5dp"
			android:paddingLeft="5dp"
			android:paddingRight="5dp"
			android:paddingTop="5dp"
			android:scaleType="centerInside"
			android:src="@drawable/top_bar_back" />

		<View
			android:id="@+id/view_temp"
			android:layout_width="1dp"
			android:layout_height="match_parent"
			android:layout_marginBottom="8dp"
			android:layout_marginTop="8dp"
			android:layout_toRightOf="@id/iv_back"
			android:background="#14191A" />

		<TextView
			android:id="@+id/tv_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginLeft="10dp"
			android:layout_toRightOf="@id/view_temp"
			android:text="坐标"
			android:textColor="#ffffff"
			android:textSize="18sp" />
		<ImageView
			android:id="@+id/iv_map"
			android:paddingBottom="5dp"
			android:paddingLeft="5dp"
			android:paddingRight="5dp"
			android:paddingTop="5dp"
			android:src="@mipmap/map"
			android:layout_alignParentRight="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
		<RelativeLayout
			android:id="@+id/re_gps"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:background="@drawable/title_bg"
			android:clickable="true"
			android:visibility="gone" >
			<ImageView
				android:id="@+id/iv_gps"
				android:layout_width="24dp"
				android:layout_height="24dp"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:layout_centerInParent="true"
				android:background="@drawable/wn_gps" />
		</RelativeLayout>
	</RelativeLayout>

    <RelativeLayout
        android:id="@+id/re_operation"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/operation__bg"
        android:clickable="true" >
	    <RelativeLayout
	        android:id="@+id/re_selectall_cancel"
	        android:layout_width="80dp"
	        android:layout_height="58dp"
	        android:layout_alignParentLeft="true"
	        android:background="@drawable/operation__bg"
	        android:clickable="true"
	        android:visibility="gone" >		
		    <ImageView
		        android:layout_width="18dp"
		        android:layout_height="18dp"
		        android:layout_centerInParent="true"
	        	android:layout_marginLeft="10dp"
		        android:background="@drawable/icon_cancel" />
	    </RelativeLayout>
	    <ImageView
        	android:id="@+id/iv_operation"
	        android:layout_width="36dp"
	        android:layout_height="36dp"
	        android:layout_centerInParent="true"
	        android:background="@drawable/operation_add" />
	    <RelativeLayout
	        android:id="@+id/re_selectall"
	        android:layout_width="80dp"
	        android:layout_height="58dp"
	        android:layout_alignParentRight="true"
	        android:background="@drawable/operation__bg"
	        android:clickable="true"
	        android:visibility="gone" >		    
	        <TextView
	        	android:id="@+id/tv_selectall"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="10dp"
	            android:text="全选"
	            android:textColor="#ffffff"
	            android:textSize="18sp" />
	    </RelativeLayout>
    </RelativeLayout>
    
    <View
        android:id="@+id/view_temp1"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_above="@id/re_operation"
        android:background="#d6d6d6" />
    
    <ListView
        android:cacheColorHint="#00000000"
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/view_temp1"
        android:layout_below="@id/title"
        android:background="@android:color/transparent"
        android:divider="@null"
        />
	<ProgressBar
		android:visibility="gone"
		android:id="@+id/site_pb_load"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true" />
</RelativeLayout>
