<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="@dimen/dp_280"
	android:layout_height="@dimen/dp_136"
	android:background="@mipmap/my_mainbg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5" >

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
			android:layout_height="@dimen/dp_45"
            android:orientation="vertical"
            android:visibility="visible" >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_white_aaaaaa"
                android:gravity="center_vertical"        
                android:textColor="#3cac17"
                android:textSize="@dimen/sp_15" />


        </LinearLayout>
		<ImageView
			android:layout_width="fill_parent"
			android:layout_height="@dimen/dp_0.5"
			android:background="@color/btn_gray_pressed" />
        <LinearLayout
            android:layout_width="match_parent"
			android:layout_height="@dimen/dp_45"
	        android:gravity="center_horizontal"
            android:orientation="vertical">
		    
	        <TextView
                android:id="@+id/tv_content"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:gravity="center_vertical"
	            android:text=""
	            android:textColor="@color/btn_gray_pressed"
	            android:textSize="@dimen/sp_15" />

        </LinearLayout>
		<ImageView
			android:layout_width="fill_parent"
			android:layout_height="@dimen/dp_0.5"
			android:background="@color/btn_gray_pressed" />
        <LinearLayout
			android:orientation="horizontal"
	        android:id="@+id/ll_doing"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
        	android:background="@drawable/btn_list_item_bg">
			<Button
				android:id="@+id/ll_doing_ng"
				android:layout_width="0dp"

				android:layout_weight="1"
				android:layout_height="fill_parent"
				android:layout_gravity="center"
				android:text="取消"
				android:textColor="#3cac17"
				android:background="@drawable/btn_list_item_bg"
				android:textSize="@dimen/sp_15"
			 />
			<ImageView
				android:layout_width="@dimen/dp_0.5"
				android:layout_height="fill_parent"
				android:background="@color/btn_gray_pressed" />

			<Button
	        	android:id="@+id/ll_doing_ok"
	            android:layout_width="0dp"
	            android:layout_weight="1"
				android:layout_height="fill_parent"
				android:layout_gravity="center"
	            android:text="确认"
				android:textColor="#3cac17"
        		android:background="@drawable/btn_list_item_bg"
	            android:textSize="@dimen/sp_15"
	          />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>